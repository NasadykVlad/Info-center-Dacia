<h1>Collections</h1>

<div id="card">
{{#if contacts.length}}
    <table>
        <thead>
            <tr>
                <th>
                    Names
                </th>
                <th>
                    Counts
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each contacts}}
            <tr>
                <td>{{name}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-primary js-remove" data-id="{{id}}"
                    data-csrf="{{@root.csrf}}">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <h4 class="count-people-collection">Count other product in collections: {{contacts.length}}</h4>

    <form action="/orders" method="POST">

        <input type="hidden" name="_csrf" value="{{csrf}}">


        <button type="submit" class="btn">Make order</button>
    </form>
  
{{else}}
    <p>No collections...</p>
{{/if}}
</div>