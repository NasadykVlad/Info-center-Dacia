<h1>Shop page</h1>

{{#if contacts.length}}
{{#each contacts}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{photo}}">
        </div>
        <div class="card-content">
          <span class="card-title name">{{name}}</span>
               <p style="font-size: 22px; font-weight: 600">{{email}} UAN</p>
        </div>
        <div class="card-action">
          <a href="/shop/{{id}}">Open contact</a>
          {{#if @root.isAuth}}
          <a href="/shop/{{id}}/edit?allow=true">Edit</a>
          <form action="/card/add" method="POST">
          <input type="hidden" name="_csrf" value="{{@root.csrf}}">
          <input type="hidden" name="id" value="{{id}}">
            <button class="btn btn-primary add-card" type="submit">Add</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<p>No course...</p>
{{/if}}