 <div class="row">
    <div class="col s6 offset-s3">
    <div class="row form_for_help">

      {{#if error}}
        <p style="padding: 0.5rem 1rem;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 1rem;
    background: rgba(255, 0, 0, .3);
    color: red" class='alert'>{{error}}</p>
      {{/if}}

    <form action="/auth/password" method="POST" class="col s12">
    <h4>Update password: </h4>
      <div class="row">
        <div class="input-field col s6">
          <input name="password" id="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
    
        <input type="hidden" name="_csrf" value="{{csrf}}">
        
        <input type="hidden" name="userId" value="{{userId}}">
        
        <input type="hidden" name="token" value="{{token}}">


        <button style="margin-top: 26px" type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
    </div>
    </div>